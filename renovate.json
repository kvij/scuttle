{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePr",
    ":combinePatchMinorReleases"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["/release\\.yaml$"],
      "matchStrings": ["GO_VERSION: (?<currentValue>.*?)\\n"],
      "depNameTemplate": "go",
      "versioningTemplate": "semver",
      "datasourceTemplate": "golang-version"
    }
  ]
}
